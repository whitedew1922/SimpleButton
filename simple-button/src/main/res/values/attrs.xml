<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CustomButton">

        <!-- Indicates type of button to decide the background. Default value is primary. -->
        <attr name="buttonType" format="enum">
            <enum name="primary" value="0"/>
            <enum name="secondary" value="1"/>
        </attr>

        <!-- Color of background button when button type is primary, or color of button stroke -->
        <!-- when button type is secondary -->
        <attr name="buttonColor" format="reference|color"/>
        <attr name="android:textColor"/>
        <attr name="android:textSize"/>

        <!-- Color of button when disabled -->
        <attr name="buttonDisableColor" format="reference|color"/>
        <attr name="buttonDisableTextColor" format="reference|color"/>

        <!-- Width of button stroke. Default is 3. -->
        <attr name="buttonStrokeWidth" format="integer"/>

        <!-- Indicates that background color of button is gradient. Only use when button type primary -->
        <!-- Default value is false -->
        <attr name="isBackgroundGradient" format="boolean"/>

        <!-- Color of button background if gradient is true -->
        <attr name="gradientColorStart" format="reference|color"/>
        <attr name="gradientColorEnd" format="reference|color"/>
        <attr name="gradientAngle">
            <flag name="top_bottom" value="0"/>
            <flag name="top_right_bottom_left" value="1"/>
            <flag name="right_left" value="2"/>
            <flag name="bottom_right_top_left" value="3"/>
            <flag name="bottom_top" value="4"/>
            <flag name="bottom_left_top_right" value="5"/>
            <flag name="left_right" value="6"/>
            <flag name="top_left_bottom_right" value="7"/>
        </attr>

        <!-- Corner radius of button -->
        <attr name="buttonCornerRadius" format="integer"/>

        <!-- Color and width of stroke that used for the loader -->
        <attr name="progressStrokeColor" format="reference|color"/>
        <attr name="progressStrokeWidth" format="float"/>
    </declare-styleable>
</resources>